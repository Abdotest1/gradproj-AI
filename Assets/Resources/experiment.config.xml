<?xml version="1.0" encoding="utf-8" ?>
<NeatExperiment>

	<!-- POPULATION SETTINGS -->
	<PopulationSize>150</PopulationSize>
	<SpecieCount>15</SpecieCount>
	<ElitismProportion>0.1</ElitismProportion>
	<SelectionProportion>0.2</SelectionProportion>

	<!-- NETWORK I/O SIZE -->
	<!-- Inputs:
       0 frontSensor
       1 leftFrontSensorz
       2 leftSensor
       3 rightFrontSensor
       4 rightSensor
       5 driftingFlag
       6 hasItemFlag -->
	<InputCount>7</InputCount>

	<!-- Outputs:
       0 accelerate
       1 brake
       2 steering (-1..1)
       3 drift
       4 useItem -->
	<OutputCount>5</OutputCount>

	<!-- ACTIVATION -->
	<Activation>
		<Scheme>Acyclic</Scheme>
		<NeuronActivationProbability>1.0</NeuronActivationProbability>
	</Activation>

	<!-- COMPLEXITY SETTINGS -->
	

	<!-- MUTATION SETTINGS -->
	<MutateAddNodeProbability>0.03</MutateAddNodeProbability>
	<MutateAddConnectionProbability>0.08</MutateAddConnectionProbability>
	<MutateDeleteConnectionProbability>0.02</MutateDeleteConnectionProbability>

	<!-- WEIGHT MUTATION -->
	<ConnectionWeightRange>5.0</ConnectionWeightRange>
	<WeightMutationSigma>1.2</WeightMutationSigma>
	<MutateConnectionWeightsProbability>0.95</MutateConnectionWeightsProbability>

	<!-- CROSSOVER -->
	<CrossoverProbability>0.75</CrossoverProbability>

	<!-- SPECIES SETTINGS -->
	<SpeciesCount>20</SpeciesCount>
	<SpeciationThreshold>1.8</SpeciationThreshold>

	<!-- EVALUATION SETTINGS -->
	<MaxGenerations>500</MaxGenerations>
	<EvaluationBatchSize>1</EvaluationBatchSize>
	<EnablePhenotypeCaching>true</EnablePhenotypeCaching>

	<!-- FITNESS BONUS (PREVENT STAGNATION) -->
	<MeanFitnessHistoryLength>40</MeanFitnessHistoryLength>
	<InterspeciesMatingProportion>0.05</InterspeciesMatingProportion>

</NeatExperiment>